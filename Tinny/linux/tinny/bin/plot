#! /bin/bash

gnuplot -persist <<EOF
set grid
set xlabel "AFPR"
set ylabel "ADR"
set title "Account Detection Rate"
set xrange [ 0 : 300 ]
set yrange [ 0 : 100 ]
plot "performance_plots.dat" using 2:3 with linespoints
EOF

gnuplot -persist <<EOF
set grid
set xlabel "AFPR"
set ylabel "Real-Time Value Detection Rate"
set title "Real-Time Value Detection Rate"
set xrange [ 0 : 300 ]
set yrange [ 0 : 100 ]
plot "performance_plots.dat" using 2:4 with linespoints
EOF

gnuplot -persist <<EOF
set grid
set xlabel "Trans Review Rate"
set ylabel "Fraud Trans Detection Rate"
set title "Account Detection Rate"
set xrange [ 0 : 10 ]
set yrange [ 0 : 100 ]
plot "performance_plots.dat" using 5:6 with linespoints
EOF
